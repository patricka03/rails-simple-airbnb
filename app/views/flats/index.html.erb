<div class="container my-2">
  <h1>All our Flats(<%=@flats.length%>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-3">
        <div class="card bg-light">
          <div class="card-body show-height-card">
            <div class="d-flex flex-row">
              <h4 class="card-title"><%= flat.name %></h4>
            </div>
            <div class="d-flex flex-row">
              <p class="card-text"><%= flat.address %></p>
            </div>
            <div class="d-flex flex-row">
              <p class="card-text"><%= flat.price_per_night %></p>
              <p class="card-text"><%= flat.number_of_guests %></p>
            </div>
          </div>
          <div class="card-footer bg-white d-flex justify-content-between">
            <div>
              <%= link_to 'More info', flat_path(flat)%>
            </div>
            <div>
              <%= link_to 'Edit', edit_flat_path(flat), class: "link-warning"%>
            </div>
              <%= link_to 'Remove', flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "link-danger"%>
            <div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
